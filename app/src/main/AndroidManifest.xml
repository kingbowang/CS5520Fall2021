<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.neu.madcourse.numad21fa_pengbowang">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_pw"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_pw_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NUMAD21Fa_PengboWang"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".AtYourService"
            android:configChanges="keyboardHidden|screenSize"
            android:exported="true"
            android:label="At Your Service"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ActivityLocator"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ActivityLinkCollector"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ActivityClicky"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>